<%= form_for(@portfolio_item) do |f| %>
  <% if @portfolio_item.errors.any? %>
    <% @portfolio_item.errors.full_messages.each do |error| %>
      <%= alert_generator error %>
    <% end %>
  <% end %>
  
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :motto %>
        <%= f.text_field :subtitle, class: 'form-control' %>
      </div>

      <div class="form-group">
        <label class="btn btn-primary">
          Upload Hauptbild <%= f.file_field :main_image, style: 'display:none;' %>
        </label>
        <label class="btn btn-primary">
          Upload Platzhalter Foto <%= f.file_field :thumb_image, style: 'display:none;' %>
        </label>
      <div>
      <%= render 'display_fotos' %>
     </div>
    </div>
  </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :beschreibung %>
        <%= f.text_area :body, class: 'form-control', rows: 13 %>
      </div>
    </div>
  </div>

  <hr>

  <div class="col-md-12">
    <h2>Qualifikationen:</h2>
    <div>
      <%= f.fields_for :technologies do |technology_form| %>
        <%= render 'technology_fields', f: technology_form %>
      <% end %>

      <div>
        <%= link_to_add_association 'Qualifikation hinzufÃ¼gen', f, :technologies %>
      </div>
    </div>

    <div class="form-group">
      <%= f.submit 'Speichern', class: 'btn btn-primary btn-block' %>
    </div>
  </div>
<% end %>
