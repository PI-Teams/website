<div class="container-fluid portfolio-container">
  <div class="row">
    <div class="col-md-7 image-fluid">
      <%= image_tag portfolio_img(@portfolio_item.main_image, 'main'), width: '100%' %>
    </div>

    <div class="col-md-5">
      <h1><%= @portfolio_item.title %></h1>

      <hr>

      <em><%= @portfolio_item.subtitle %></em>

      <p><%= @portfolio_item.body %></p>

      <hr>

      <h3>Qualifikationen:</h3>

      <% @portfolio_item.technologies.each do |t| %>
      <p><%= t.name %></p>
      <% end %>

      <% if logged_in?(:site_admin) %>
        <div class="">
          <%= link_to "Bearbeiten", edit_portfolio_path(@portfolio_item), class: 'btn btn-warning' %>
          <%= link_to "Löschen", portfolio_path(@portfolio_item), method: :delete, data: { confirm: 'Willst du dein Profil wirklich löschen? Dann sind auch die Bilder weg...' }, class: 'btn btn-danger'  %>
        </div>
        
      <% end %>
    </div>
  </div>
</div>